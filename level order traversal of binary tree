#include <bits/stdc++.h>
using namespace std;

class binTree{
    public:
    
    int val;
    binTree* left;
    binTree* right;
    public:
    binTree(){
        this->val=0;
        this->left=NULL;
        this->right=NULL;
    }
    binTree(int v){
        this->val=v;
        this->left=NULL;
        this->right=NULL;
    }
    void levelOrder(binTree* root){
        if(!root) return;
        queue<binTree*> q;
        q.push(root);
        int size=1;
        while(!q.empty()){
            //binTree *node=q.front();
            //q.pop();
            int s=size;
            for(int i=0;i<s;i++){
                binTree *node=q.front();
                cout<<node->val<<" ";
                q.pop();
                size--;
                if(node->left) q.push(node->left),size++;
                if(node->right) q.push(node->right),size++;
            }
            cout<<endl;
            
        }
        
    }
    
    
};


int main() {
    binTree t;
    binTree *root=new binTree(100);
    root->left=new binTree(50);
    root->right=new binTree(200);
    root->left->left=new binTree(25);
    root->left->right=new binTree(75);
    root->right->right=new binTree(350);
    t.levelOrder(root);
	return 0;
}


output:
100 
50 200 
25 75 350 


